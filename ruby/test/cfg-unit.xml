<!--
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="ruby editing">

    <testbag testattribs="all,stable" executor="code" name="Unit Tests">
        <testset dir="unit/src">
            <patternset>
                <include name="**/**Test.class"/>
<exclude name="org/netbeans/modules/ruby/FormattingTest.class/testReformatAll"/>
<exclude name="org/netbeans/modules/ruby/RubyLexerTest.class/testDefRegexp"/>
<exclude name="org/netbeans/modules/ruby/RubyLexerRandomTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <!--
    <testbag testattribs="failing" executor="code" name="failing">
        <testset dir="unit/src">
            <patternset>
                <include name="**/**Test.class"/>
<include name="org/netbeans/modules/ruby/RubyLexerRandomTest.class/testRandom"
         expectedFail="problems in incremental lexing"/>
<include name="org/netbeans/modules/ruby/RubyLexerTest.class/test93990"
         expectedFail="problems in incremental lexing"/>
            </patternset>
        </testset>
    </testbag>
    -->
    
    <executor name="code" antfile="build-unit.xml" target="run-unit-test"/>
    
    <compiler name="unit-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    
</mconfig>
